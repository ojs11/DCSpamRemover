; 유동 탄압. false/proxy/mobile/proxy,mobile
restrict_anonymous=false

; 이미지, 동영상 첨부 제한. false/all/proxy/mobile/proxy,mobile
restrict_media=false

[selenium]
headless=false

; 새로고침 간격, 단위(sec)
[interval.refresh]
; 최소값
min=30
; 최대값
max=300
; 게시글 없을때 새로고침 주기 증가율 (ex 1.5=1.5배씩)
mul=1.05
; 랜덤값 크기 (min=30, rand=30 -> 30~60초)
rand=30

; 클릭간 랜덤 지연, 단위(ms)
[interval.click]
; 최소값
min=600
; 최대값
max=1000
